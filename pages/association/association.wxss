/* pages/association/association.wxss */
.container{
  width: 100%;
  height: 200%;
}
.stTabContent{
  width: 100%;
  height:80rpx;
  position: fixed;
  background-color: white;
  z-index: 10;
  top: 0;
  box-shadow: 4rpx 4rpx 14rpx rgb(242, 242, 242);
}
.stTab{
  position: relative;
  width: 33.3%;
  height: 100%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.stTab span{
  position: absolute;
  top:12rpx;
  font-size: 34rpx;
  font-family: "STXihei";
}
.tabBtmIcon{
  position: absolute;
  bottom: 0rpx;
  width: 50rpx;
  height:8rpx;
  background-color: #ffd200;
  left:40%;
}
.searchContent{
  width: 92%;
  height: 80rpx;
  position: relative;
  padding-left: 5%;
  padding-right: 3%;
  border-bottom: 20rpx solid rgb(242, 242, 242);
}
.selectArea{
  width: 25%;
  height: 100%;
}
.selectArea view{
  font-size: 34rpx;
  font-family: "STXihei";
  color:rgb(0,0,0);
  text-align: center;
  right:5%;
}
.selectIcon{
  width: 30rpx;
  height: 30rpx;
}
.inputArea{
  width:75%;
  height: 100%;
  position: relative;
}
.searchInput{
  width: 90%;
  height: 50rpx;
  background-color: rgb(242, 242, 242);
  color: rgba(138, 138,138, 0.4);
  font-family: "AdobeHeitiStd-Regular";
  border-radius: 50rpx;
  border: 1rpx solid rgba(138, 138,138, 0.4);
  text-align: center;
  z-index: 1;
  font-size: 30rpx;
}
.searchIcon{
  position: absolute;
  left: 38%;
  z-index: 2;
  top: 35%;
}
.selectItems{
  width: 30%;
  height: 188rpx;
  border-radius: 6rpx;
  position: absolute;
  top:80rpx;
  left: 5%;
  background-color: rgb(255, 255, 255);
  box-shadow: 4rpx 4rpx 14rpx rgb(242, 242, 242);
  z-index: 10;
}
.selectItem_selected{
  width: 85%;
  height: 33.3%;
  color:rgba(63, 63, 63,0.8);
  padding-left: 10%;
  font-size: 34rpx;
  font-family: "STXihei"; 
  border-right: 5px solid rgb(255, 210, 0);
}
.selectItem{
  width: 90%;
  height: 33.3%;
  color:rgba(63, 63, 63,0.8);
  padding-left: 10%;
  font-size: 34rpx;
  font-family: "STXihei"; 
  z-index: 11;
}
.stContent{
  width: 100%;
  background-color: white;
  padding-top: 8rpx;
}
.stItem{
  width: 96%;
  height: 250rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  box-shadow: 4rpx 4rpx 14rpx rgba(0, 0, 0,0.16);
  position: relative;
}
.stImageContent{
  width: 50%;
  height: 100%;
  position: relative;
}
.stImage{
  width: 74%;
  height: 80%;
  position: absolute;
  top:10%;
  left:8%;
}
.done{
  opacity: 1;
}
.lazy{
  transition: all .3s ease;
  opacity: 0.3;
}
.stTitleIcon{
  width: 16rpx;
  height:40rpx;
  margin:8% 4% 76% 8%;
  background-color: #ffd200;
  position: absolute;
  right: 0;
}
.stTextContent{
  width: 50%;
  height: 100%;
  position: relative;
}
.stTitleContent{
  -webkit-box-align: flex-end;
  -webkit-align-items: flex-end;
  -ms-flex-align: flex-end;
  align-items: flex-end;  
  position: relative;
  width: 100%;
  height: 28%;
  text-align: start;
}
.stName{
  font-family: "STXihei";
  font-size: 36rpx;
  color: rgb(0,0,0);
  position: absolute;
  float: left;
  width: 100%;
  word-wrap: break-word;
  height: 150%;
}
.stType{
  font-family: "STXihei";
  font-size: 26rpx;
  color: rgb(162,162,162);
  width: 100%;
  margin-top: 25rpx;
}
