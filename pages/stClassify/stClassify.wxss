/*顶部tab样式  */
 .container{
  width:100%;
} 
.stTabContent{
  width: 100%;
  height:80rpx;
  border-bottom: 20rpx solid rgb(242, 242, 242);
}
.stTab{
  position: relative;
  width: 33.3%;
  height: 100%;
  text-align: center;
  font-size: 34rpx;
}
.tabBtmIcon{
  position: absolute;
  bottom: 0rpx;
  width: 50rpx;
  height:8rpx;
  background-color: #ffd200;
  left:40%;
}
.stContent{
  width: 100%;
  background-color: white;
  padding-top: 8rpx;
}
.stItem{
  width: 96%;
  height: 250rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  box-shadow: 4rpx 4rpx 14rpx rgb(242, 242, 242);
}
.stImageContent{
  width: 50%;
  height: 100%;
  position: relative;
}
.stImage{
  width: 74%;
  height: 80%;
  position: absolute;
  top:10%;
  left:8%;
}
.stTitleIcon{
  width: 16rpx;
  height:40rpx;
  margin:8% 4% 76% 8%;
  background-color: #ffd200;
  position: absolute;
  right: 0;
}
.stTextContent{
  width: 50%;
  height: 100%;
  position: relative;
}
.stTitleContent{
  -webkit-box-align: flex-end;
  -webkit-align-items: flex-end;
  -ms-flex-align: flex-end;
  align-items: flex-end;  
  position: relative;
  width: 100%;
  height: 28%;
  text-align: start;
}
.stName{
  font-family: "STXihei";
  font-size: 36rpx;
  color: rgb(0,0,0);
  position: absolute;
  float: left;
  width: 100%;
  word-wrap: break-word;
  height: 150%;
}
.stType{
  font-family: "STXihei";
  font-size: 26rpx;
  color: rgb(162,162,162);
  width: 100%;
  margin-top: 25rpx;
}
